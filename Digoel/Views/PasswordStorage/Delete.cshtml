@model Digoel.Models.PasswordStorage

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <div class="container">
                <div class="panel panel-danger">
                    <div class="panel-heading">Are you sure you want to delete this?</div>
                    <div class="panel-body">
                        <div>

                            <dl class="dl-horizontal">
                                <dt>
                                    @Html.DisplayNameFor(model => model.Website)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.Website)
                                </dd>

                                <dt>
                                    @Html.DisplayNameFor(model => model.Password)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.Password)
                                </dd>

                                <dt>
                                    @Html.DisplayNameFor(model => model.DateSaved)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.DateSaved)
                                </dd>

                            </dl>

                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()

                                <div class="form-actions no-color">
                                    <input type="submit" value="Delete" class="btn btn-danger btn-sm" /> 
                                    @Html.ActionLink(" Back to List", "Index", null, new { @class = "btn btn-info btn-sm glyphicon glyphicon-th-list" })
                                </div>
                            }
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


